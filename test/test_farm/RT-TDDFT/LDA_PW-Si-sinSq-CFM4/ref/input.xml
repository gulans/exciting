<input>
        <title>Si</title>
        <structure speciespath="./">
                <crystal scale="10.26">
                        <basevect>0.0 0.5 0.5 </basevect>
                        <basevect>0.5 0.0 0.5 </basevect>
                        <basevect>0.5 0.5 0.0 </basevect>
                </crystal>
                <species speciesfile="Si.xml" rmt="2.1">
                        <atom coord="0.00 0.00 0.00"/>
                        <atom coord="0.25 0.25 0.25"/>
                </species>
        </structure>
        <groundstate
                ngridk="3 3 3"
                rgkmax="4.0"
                gmaxvr="12.0"
                epsengy="1e-6"
                reducek="false"
                nosym="true"
                vkloff="-0.07 0.11 0.003"
                do="fromscratch"
                mixerswitch="1"
                mixer="msec"
                findlinentype="Wigner_Seitz"
                frozencore="false"
                outputlevel="high"
                nempty="20"
                useDensityMatrix="false"
                radialgridtype="cubic"
                xctype="LDA_PW">
        </groundstate>
        <xs
          xstype ="RT-TDDFT"
	  ngridk="3 3 3"
	  rgkmax="4.0d0"
	  vkloff="-0.07 0.11 0.003"
          nosym="true"
	  reducek="false"
          nempty="20">


          <realTimeTDDFT
            propagator="CFM4"
            timeStep="0.25d0"
            endTime="10.0d0"
            readPmatBasis="false"
            printTimingGeneral="true"
            printTimingDetailed="true"
            calculateTotalEnergy="true"
            calculateNExcitedElectrons="true"
            printAfterIterations="1"
            vectorPotentialSolver="improvedeuler">
            <laser fieldType="total">
		    <sinSq t0="0.5d0" omega="1.d0" phase="0.d0" amplitude="1.0d0" pulseLength="5.d0"
			    direction="y"/>
            </laser>
          </realTimeTDDFT>



        </xs>
</input>
